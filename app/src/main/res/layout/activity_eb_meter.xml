<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/activity_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="@string/item_status"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />


                <Spinner
                    android:id="@+id/itemStatusSpineer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/etMake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="@string/Enter_Make"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/etModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="@string/Enter_Model_No."
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4dp"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/etCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="@string/Enter_Capacity"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/etSerialNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="@string/EnterSerial_Num"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4dp"
                android:background="@drawable/edittext_center_bg"
                android:gravity="center"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:padding="@dimen/_5dp"
                    android:text="@string/Enter_Manufacturing_Date"
                    android:textSize="@dimen/_14dp" />

                <TextView
                    android:id="@+id/dateIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:text="ic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/meeterTypeSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etConnectionNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="Connection No"
                        android:maxLength="3"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etMeterSerialNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="Meter Serial No"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Connection Type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/powerTypeSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etCableRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="Cable Rating (Transformer to EB Meter) "
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etCableRatingPIU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="Cable Rating ( EB Meter to PIU/IPMS/AMF)  "
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Transformer Type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/transformerTypeSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Transformer Neutral Earthing"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />


                <Spinner
                    android:id="@+id/etTransformerEarthing"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/waterLoging"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Circuit Breakers"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />


                <Spinner
                    android:id="@+id/circuitBreakersSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="Water Shed Meter status"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/waterseedpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="EB Theft from Site"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/etTheftfromSite"
                    android:layout_width="fill_parent"
                    android:entries="@array/waterLoging"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="@string/Item_Condition"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />

                <Spinner
                    android:id="@+id/itemConditionSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4dp"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="@string/Enter_Description"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4dp"
                android:minHeight="@dimen/_30dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/ebMeterreading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:hint="Enter EB meter Reading"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/_14dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:orientation="vertical"
                android:padding="@dimen/_4dp">

                <com.telecom.ast.sitesurvey.component.FNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:gravity="center_vertical"
                    android:text="EB  bill"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14dp" />


                <Spinner
                    android:id="@+id/eBbillSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/_32dp"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/backgroundColor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_28dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:elevation="@dimen/_6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/noimage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:padding="@dimen/_5dp"
                            android:text="Front Photo"
                            android:textAlignment="center"
                            android:textColor="@color/blackMedium"
                            android:textSize="@dimen/_13dp" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_28dp"
                    app:cardBackgroundColor="@android:color/white">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/noimage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:elevation="@dimen/_6dp"
                            android:padding="@dimen/_5dp"
                            android:text="Open Photo"
                            android:textAlignment="center"
                            android:textColor="@color/blackMedium"
                            android:textSize="@dimen/_13dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_28dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="@dimen/_130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/_130dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/noimage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:elevation="@dimen/_6dp"
                            android:padding="@dimen/_5dp"
                            android:text="Sr No Plate Photo"
                            android:textAlignment="center"
                            android:textColor="@color/blackMedium"
                            android:textSize="@dimen/_13dp" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3dp"
