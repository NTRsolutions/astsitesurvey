<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_3dp"
                app:cardElevation="@dimen/_6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/smpsreadiing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reading on SMPS Screen"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:minHeight="@dimen/_30dp"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:counterOverflowTextAppearance="@style/CounterOverFlow"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/etBattVoltage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeTextType="uniform"
                                android:hint="Batt Voltage"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/_14dp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:minHeight="@dimen/_30dp"
                        android:orientation="horizontal">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:counterOverflowTextAppearance="@style/CounterOverFlow"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/etLoadCurrent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeTextType="uniform"
                                android:hint="Load Current"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/_14dp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_4dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130dp"
                            android:layout_margin="@dimen/_8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minHeight="@dimen/_28dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_weight="1"
                                    android:src="@drawable/noimage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bg_color"
                                    android:elevation="@dimen/_6dp"
                                    android:padding="@dimen/_5dp"
                                    android:text="Batt Voltage Photo"
                                    android:textAlignment="center"
                                    android:textColor="@color/blackMedium"
                                    android:textSize="@dimen/_13dp" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130dp"
                            android:layout_margin="@dimen/_8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minHeight="@dimen/_28dp"
                            app:cardBackgroundColor="@android:color/white">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="fitXY"
                                    android:layout_weight="1"
                                    android:src="@drawable/noimage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bg_color"
                                    android:elevation="@dimen/_6dp"
                                    android:padding="@dimen/_5dp"
                                    android:text="Load Current"
                                    android:textAlignment="center"
                                    android:textColor="@color/blackMedium"
                                    android:textSize="@dimen/_13dp" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_3dp"
                app:cardElevation="@dimen/_6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/clampmeeter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clamp Meter"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:minHeight="@dimen/_30dp"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:counterOverflowTextAppearance="@style/CounterOverFlow"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/etclampBattVoltage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeTextType="uniform"
                                android:hint="Batt Voltage"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/_14dp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:minHeight="@dimen/_30dp"
                        android:orientation="horizontal">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:counterOverflowTextAppearance="@style/CounterOverFlow"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/etclampLoadCurrent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeTextType="uniform"
                                android:hint="Load Current"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/_14dp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_4dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130dp"
                            android:layout_margin="@dimen/_8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minHeight="@dimen/_28dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/clampimage1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="fitXY"
                                    android:layout_weight="1"
                                    android:src="@drawable/noimage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bg_color"
                                    android:elevation="@dimen/_6dp"
                                    android:padding="@dimen/_5dp"
                                    android:text="Batt Voltage Photo"
                                    android:textAlignment="center"
                                    android:textColor="@color/blackMedium"
                                    android:textSize="@dimen/_13dp" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130dp"
                            android:layout_margin="@dimen/_8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minHeight="@dimen/_28dp"
                            app:cardBackgroundColor="@android:color/white">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/clampimage2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_weight="1"
                                    android:src="@drawable/noimage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bg_color"
                                    android:elevation="@dimen/_6dp"
                                    android:padding="@dimen/_5dp"
                                    android:text="Load Current"
                                    android:scaleType="fitXY"
                                    android:textAlignment="center"
                                    android:textColor="@color/blackMedium"
                                    android:textSize="@dimen/_13dp" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3dp"
        app:cardElevation="@dimen/_6dp">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/DefaultButtonText"
            android:layout_width="@dimen/_210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="Submit"
            android:textSize="@dimen/_12dp" />
    </android.support.v7.widget.CardView>


</LinearLayout>
