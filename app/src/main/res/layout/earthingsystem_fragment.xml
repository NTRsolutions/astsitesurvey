<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardElevation="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Number Of Earthpits"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/etNoEarthPits"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/NoEarthPits"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Inter(Grid) Connectivity of Earthpits"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/InterEarthPitsSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/EarthPitsImageLayout"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130dp"
                        android:layout_margin="@dimen/_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minHeight="@dimen/_28dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="@dimen/_130dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/EarthPitsImage"
                                android:layout_width="@dimen/_130dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/noimage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_color"
                                android:elevation="@dimen/_6dp"
                                android:padding="@dimen/_5dp"
                                android:text="Inter(Grid) Earthpits Image"
                                android:textAlignment="center"
                                android:textColor="@color/blackMedium"
                                android:textSize="@dimen/_13dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etVoltageEarth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Voltage between Earth And Neutral"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Dg Neutral Wire Connected With Earthing"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/dgnaturelConnectSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Eb Neutral Wire Connected With Earthing"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/ebnaturelConnectSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Igb Status"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/IGBStatusSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/igbstatus"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/igbConnectedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Igb Connected Status"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/IGBconnectedStatusSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/connectedstatus"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Egb Status"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/EGBStatusSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/egbstatus"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/egbConnectedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Egb Connected Status"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/egbconnectedStatusSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/connectedstatus"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>

                <!--    <LinearLayout
                        android:id="@+id/lnrDynamicEditTextHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ValueofEarthpitLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etValueofEarthpit1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Value Of Earthpit 1"
                            android:maxLength="5"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ValueofEarthpitLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etValueofEarthpit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Value of Earthpit 2"
                            android:maxLength="5"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ValueofEarthpitLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etValueofEarthpit3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Value Of Earthpit 3"
                            android:maxLength="5"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ValueofEarthpitLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etValueofEarthpit4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Value Of Earthpit 4"
                            android:maxLength="5"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etvalueInterGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Value Of Inter/ Grid (Ohm)"
                            android:maxLength="2"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3dp"
            app:cardElevation="@dimen/_6dp">

            <Button
                android:id="@+id/btnSubmit"
                style="@style/DefaultButtonText"
                android:layout_width="@dimen/_210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="Submit"
                android:textSize="@dimen/_12dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v7.widget.CardView>
