<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardElevation="@dimen/_8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Electrical Connection and fittings"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/spinnerElectrical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ElectricaltypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp"
                    android:visibility="gone">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Electrical Connection Type"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/spinnerElectricaltype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:text="Aviation Lamp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/spinnerAviationLamp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_22dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="Lightning Arrester"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/LightningSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etEarthingvalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Enter Earthing-Resistance Value."
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_22dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="Servo Stabiliser"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/etServoStabiliserSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ServoStabiliserCondiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_22dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="Servo Stabiliser Condition"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/StabiliserConditopnSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


              <!--  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etServoStabiliser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:hint="Servo Stabiliser"
                            android:textSize="@dimen/_14dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_22dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4dp">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="TubeLight"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14dp" />


                    <Spinner
                        android:id="@+id/TubeLightSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/_32dp"
                        android:popupBackground="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/backgroundColor" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3dp"
        app:cardElevation="@dimen/_6dp">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/DefaultButtonText"
            android:layout_width="@dimen/_210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="Submit"
            android:textSize="@dimen/_12dp" />
    </android.support.v7.widget.CardView>


</LinearLayout>
