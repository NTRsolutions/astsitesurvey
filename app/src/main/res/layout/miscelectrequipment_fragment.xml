<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardElevation="@dimen/_8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4dp"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Electrical Connection and fittings"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_30dp"
                        app:cardBackgroundColor="@android:color/white">


                        <Spinner
                            android:id="@+id/spinnerElectrical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:entries="@array/BTSType"
                            android:gravity="center"
                            android:popupBackground="@color/white" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4dp"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Aviation Lamp"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_30dp"
                        app:cardBackgroundColor="@android:color/white">


                        <Spinner
                            android:id="@+id/spinnerAviationLamp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:entries="@array/BTSType"
                            android:gravity="center"
                            android:popupBackground="@color/white" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4dp"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Lightning Arrester"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_30dp"
                        app:cardBackgroundColor="@android:color/white">


                        <Spinner
                            android:id="@+id/LightningSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:popupBackground="@color/white" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4dp"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal">

                    <com.telecom.ast.sitesurvey.component.FNTextView
                        android:id="@+id/Time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Earthing-Resistance Value"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_28dp"
                        app:cardBackgroundColor="@android:color/white">

                        <com.telecom.ast.sitesurvey.component.FNEditText
                            android:id="@+id/etbtsOperator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Enter Earthing-Resistance Value"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_16dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3dp"
        app:cardElevation="@dimen/_6dp">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/DefaultButtonText"
            android:layout_width="@dimen/_210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="Submit"
            android:textSize="@dimen/_12dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>
